policy {
  panorama {
    address {
      ADDR1 {
        ip-netmask 1.1.1.2/32;
        tag [ TAG1 TAG2];
      }
      ADDR2 {
        ip-netmask 1.2.1.2/32;
        tag [ TAG3 TAG4];
      }
    }
    address-group;
    post-rulebase {
      nat {
        rules {
          DEST_NAT_NAME {
            destination-translation {
              translated-address ADDR1;
            }
            to INSIDE;
            from OUTSIDE;
            source any;
            destination ADDR2;
          }
        }
      }
      security {
        rules {
          PERMIT_ALL {
            to any;
            from any;
            source any;
            destination any;
            application any;
            service any;
            action allow;
          }
        }
      }
    }
  }
}
config {
  devices {
    localhost.localdomain {
      network {
        interface {
          ethernet {
            ethernet1/1 {
              layer3 {
                units {
                  ethernet1/1.1 {
                    ip {
                      1.1.1.3/24;
                    }
                  }
                  ethernet1/1.2 {
                    ip {
                      1.1.2.3/24;
                    }
                  }
                }
              }
            }
            ethernet1/2 {
              layer3 {
                units {
                  ethernet1/2.1 {
                    ip {
                      1.2.1.3/24;
                    }
                  }
                  ethernet1/2.2 {
                    ip {
                      1.2.2.3/24;
                    }
                  }
                }
              }
            }
          }
        }
        virtual-router {
          vr1 {
            interface [ ethernet1/1.1 ethernet1/1.2 ethernet1/2.1 ethernet1/2.2];
          }
        }
      }
      deviceconfig {
        system {
          hostname destination-nat-panorama;
        }
      }
      vsys {
        vsys1 {
          zone {
            INSIDE {
              network {
                layer3 [ ethernet1/1.1 ethernet1/1.2];
              }
            }
            OUTSIDE {
              network {
                layer3 [ ethernet1/2.1 ethernet1/2.2];
              }
            }
          }
        }
      }
    }
  }
}
