policy {
  panorama {
    address {
      ADDR1 {
        ip-netmask 1.1.1.2/32;
        tag [ TAG1 TAG2];
      }
      ADDR2 {
        ip-netmask 1.2.1.2/32;
        tag [ TAG3 TAG4];
      }
    }
    post-rulebase {
      nat {
        rules {
          DEST_NAT_NAME {
            destination-translation {
              translated-address SERVER_NEW_ADDR;
            }
            to INSIDE;
            from OUTSIDE;
            source SOURCE_ADDR;
            destination any;
          }
        }
      }
      security {
        rules {
          PERMIT_ALL {
            to any;
            from any;
            source any;
            destination any;
            application any;
            service any;
            action allow;
          }
        }
      }
    }
  }
}
config {
  devices {
    localhost.localdomain {
      network {
        interface {
          ethernet {
            ethernet1/1 {
              layer3 {
                units {
                  ethernet1/1.1 {
                    ip {
                      1.1.1.3/24;
                    }
                  }
                }
              }
            }
            ethernet1/2 {
              layer3 {
                units {
                  ethernet1/2.1 {
                    ip {
                      1.2.1.3/24;
                    }
                  }
                }
              }
            }
          }
        }
        virtual-router {
          vr1 {
            interface [ ethernet1/1.1 ethernet1/1.2 ethernet1/2.1 ethernet1/2.2];
          }
        }
      }
      deviceconfig {
        system {
          hostname destination-nat-panorama;
        }
      }
      vsys {
        vsys1 {
          address {
            SOURCE_ADDR {
              ip-netmask 1.2.1.2/32;
              tag [ TAG3 TAG4];
            }
            SERVER_NEW_ADDR {
              ip-netmask 1.1.1.99/32;
              tag [ TAG1 TAG2];
            }
            SERVER_OLD_ADDR {
              ip-netmask 1.1.1.2/32;
              tag [ TAG5];
            }
          }
          rulebase {
            security {
              rules {
                PERMIT_TO_SERVER {
                  to INSIDE;
                  from OUTSIDE;
                  source any;
                  # destination 1.1.1.0/24;
                  destination [ SERVER_NEW_ADDR];
                  application any;
                  service any;
                  action allow;
                }
                DENY_ALL {
                  to any;
                  from any;
                  source any;
                  destination any;
                  application any;
                  service any;
                  action deny;
                }
              }
            }
          }
          zone {
            INSIDE {
              network {
                layer3 [ ethernet1/1.1 ethernet1/1.2];
              }
            }
            OUTSIDE {
              network {
                layer3 [ ethernet1/2.1 ethernet1/2.2];
              }
            }
            DUMMY {
              network {
                layer3 [ ethernet1/1.3];
              }
            }
          }
        }
      }
    }
  }
}
